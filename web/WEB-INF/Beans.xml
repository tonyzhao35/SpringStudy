<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="beanTemplate" abstract="true">
        <property name="message" value="Hello All!"/>
    </bean>

    <bean id="helloWorld" class="com.tutorialspoint.beans.xml.HelloWorld" scope="singleton"
          init-method="init" destroy-method="destroy" parent="beanTemplate">
        <property name="others" value="Hello Others!"/>
        <constructor-arg index="0" ref="helloChild"/>
        <constructor-arg index="1" value="Child say hello!!"/>
    </bean>

    <bean id="helloChild" class="com.tutorialspoint.beans.xml.HelloChild"/>

    <bean id="initBeans" class="com.tutorialspoint.beans.xml.InitBeans"/>
</beans>